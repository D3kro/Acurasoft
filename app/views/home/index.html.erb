<html lang="en">
 <head>
  <meta charset="utf-8"/>
  <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
  <title>
   Actividad
  </title>
  <script src="https://cdn.tailwindcss.com">
  </script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&amp;display=swap" rel="stylesheet"/>
  <style>
   body {
            font-family: 'Roboto', sans-serif;
        }
  </style>
 </head>
 <body class="bg-gray-100">
  <div class="flex">
   <!-- Sidebar -->
   <div class="bg-purple-700 text-white w-64 min-h-screen p-6">
    <div class="flex items-center mb-12">
      <%= image_tag "logo.png", alt: "Company Logo", class: "mr-3", height: "50", width: "50" %>     <span class="text-xl font-bold">
      ACURASOFT
     </span>
    </div>
    <nav class="space-y-4">
     <a class="block py-2 px-4 bg-purple-500 rounded-lg" href="#">
      INICIO
     </a>
     <a class="block py-2 px-4" href="#">
      NOMINA
     </a>
     <a class="block py-2 px-4" href="#">
      VENTAS
     </a>
     <a class="block py-2 px-4" href="#">
      INVENTARIOS
     </a>
     <a href="#">
      <% if user_signed_in? %>
        <%= link_to "SALIR", destroy_user_session_path, method: :delete, data: { confirm: "Are you sure you want to log out?" },  class:"block py-2 px-4" %>
      <% else %>
        <%= link_to "Sign in", new_user_session_path, class:"p-3 hover:bg-gray-50 transition ease duration-300 rounded-lg text-center focus:bg-gray-100 lg:inline-block block" %>
        <%= link_to "Sign up", new_user_registration_path, class:"p-3 hover:bg-gray-50 transition ease duration-300 rounded-lg text-center focus:bg-gray-100 lg:inline-block block lg:ml-2" %>
      <% end %>
    </a>
    </nav>
   </div>
   <!-- Main Content -->
   <div class="flex-1 p-6">
    <div class="flex justify-between items-center mb-6">
     <h1 class="text-3xl font-bold">
      ACTIVIDAD
     </h1>
     <div class="flex items-center">
      <img alt="User Avatar" class="rounded-full mr-3" height="40" src="https://storage.googleapis.com/a1aa/image/guNmHldQ007HI14Jb1iXM2fi2cxtw5FSOyrAeC98EOd4MXyTA.jpg" width="40"/>
      <div>
       <p class="font-bold">
        Empresa
       </p>
       <p class="text-sm text-gray-500">
            NIT: <%= current_user.NIT %>
       </p>
      </div>
     </div>
    </div>
    <div class="bg-white p-6 rounded-lg shadow-md mb-6">
     <div class="flex justify-between items-center mb-4">
      <p class="text-gray-600">
       octubre 2024 - noviembre 2024
      </p>
      <div class="flex space-x-2">
       <button class="px-4 py-2 bg-gray-200 rounded-full">
        Mes
       </button>
       <button class="px-4 py-2 bg-gray-200 rounded-full">
        1 Año
       </button>
       <button class="px-4 py-2 bg-gray-200 rounded-full">
        2 Año
       </button>
      </div>
     </div>
     <div class="mb-4">
      <p class="text-gray-600">
       Ventas
      </p>
      <p class="text-2xl font-bold">
       2300
      </p>
     </div>
     <div class="h-48">
      <!-- Placeholder for the chart -->
      <%= image_tag "chart.png", alt: "Bar chart showing sales data",  height: "200", width: "600" %>    
     </div>
    </div>
    <div class="grid grid-cols-2 gap-6">
     <div class="bg-white p-6 rounded-lg shadow-md">
      <h2 class="font-bold mb-4">
       Ultimos Ventas
      </h2>
      <!-- Content for Ultimos Ventas -->
     </div>
     <div class="bg-white p-6 rounded-lg shadow-md">
      <h2 class="font-bold mb-4">
       Ultimos Gastos
      </h2>
      <!-- Content for Ultimos Gastos -->
     </div>
    </div>
   </div>
  </div>
 </body>